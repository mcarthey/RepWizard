{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RepWizard.Dev.slnf",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "detail": "Builds all projects including UI (excludes MAUI app host)",
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/RepWizard.Tests/RepWizard.Tests.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build: Android",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/RepWizard.App/RepWizard.App.csproj",
                "-f", "net9.0-android",
                "-c", "Debug",
                "/property:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "MAUI: Start Emulator",
            "type": "shell",
            "command": "emulator -avd pixel_7_-_api_36 -no-snapshot-load",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*emulator.*$",
                    "endsPattern": "^.*boot completed.*$"
                }
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            }
        },
        {
            "label": "MAUI: Wait for Emulator",
            "type": "shell",
            "command": "adb wait-for-device && adb shell 'while [ \"$(getprop sys.boot_completed)\" != \"1\" ]; do sleep 1; done' && echo 'Emulator ready'",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "MAUI: Deploy to Emulator",
            "type": "shell",
            "command": "dotnet build ${workspaceFolder}/RepWizard.App/RepWizard.App.csproj -f net9.0-android -c Debug -t:Run -p:AndroidAttachDebugger=false",
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "MAUI: Start Emulator and Deploy",
            "dependsOn": [
                "MAUI: Start Emulator",
                "MAUI: Wait for Emulator"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "MAUI: Deploy (emulator already running)",
            "dependsOn": [
                "MAUI: Wait for Emulator",
                "MAUI: Deploy to Emulator"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Run: API (localhost:7001)",
            "type": "process",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/RepWizard.Api/RepWizard.Api.csproj",
                "--launch-profile", "https"
            ],
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "dev"
            }
        },
        {
            "label": "Start: API + Emulator",
            "dependsOn": [
                "Run: API (localhost:7001)",
                "MAUI: Start Emulator and Deploy"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
