{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RepWizard.Dev.slnf",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "detail": "Builds all projects including UI (excludes MAUI app host)",
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/RepWizard.Tests/RepWizard.Tests.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Start API",
            "type": "process",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/RepWizard.Api/RepWizard.Api.csproj",
                "--launch-profile", "https"
            ],
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "group": "dev"
            }
        },
        {
            "label": "Start Emulator",
            "type": "shell",
            "command": "emulator -avd pixel_7_-_api_36 -no-snapshot-load -partition-size 2047",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*emulator.*$",
                    "endsPattern": "^.*boot completed.*$"
                }
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            }
        },
        {
            "label": "Deploy to Emulator",
            "type": "shell",
            "command": "adb -s emulator-5554 wait-for-device && adb -s emulator-5554 shell 'while [ \"$(getprop sys.boot_completed)\" != \"1\" ]; do sleep 1; done' && dotnet build ${workspaceFolder}/RepWizard.App/RepWizard.App.csproj -f net9.0-android -c Debug -t:Run '-p:AdbTarget=-s emulator-5554' -p:AndroidAttachDebugger=false -r android-x64",
            "detail": "Waits for emulator, builds if needed, and deploys",
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Deploy to Physical Device",
            "type": "shell",
            "command": "dotnet build ${workspaceFolder}/RepWizard.App/RepWizard.App.csproj -f net9.0-android -c Debug -r android-arm -p:EmbedAssembliesIntoApk=true \"-p:ApiBaseUrl=${input:apiBaseUrl}\" && adb -s ${input:deviceSerial} install -r ${workspaceFolder}/RepWizard.App/bin/Debug/net9.0-android/android-arm/com.repwizard.app-Signed.apk && adb -s ${input:deviceSerial} shell am start -n com.repwizard.app/com.repwizard.app.MainActivity",
            "detail": "Builds for ARM, installs, and launches on physical device",
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ],
    "inputs": [
        {
            "id": "deviceSerial",
            "type": "promptString",
            "description": "Physical device serial (from 'adb devices'), e.g. 192.168.1.130:40517",
            "default": "192.168.1.130:40517"
        },
        {
            "id": "apiBaseUrl",
            "type": "promptString",
            "description": "API base URL (ngrok URL for physical device)",
            "default": "https://nonperverse-marg-rateable.ngrok-free.dev"
        }
    ]
}
